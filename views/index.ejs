<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Neo4j</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container h-100">
        <div class="row">
            <div class="col">
                <h2>Movies</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Title</th>
                            <th scope="col">Year</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% movies.forEach(function (movie) { %>
                        <tr>
                            <td><%= movie.id %></td>
                            <td><%= movie.title %></td>
                            <td><%= movie.year %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>

                <form method="POST" action="/movie/add">
                    <div class="form-group">
                        <label for="title">
                            Movie Title
                        </label>
                        <input class="form-control" type="text" name="title" id="title" />
                    </div>
                    <div class="form-group">
                        <label for="year">
                            Movie Year
                        </label>
                        <input class="form-control" type="number" name="year" id="year" />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="col">
                <h2>Actors</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% actors.forEach(function (actor) { %>
                        <tr>
                            <td><%= actor.id %></td>
                            <td><%= actor.name %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>

                <form method="POST" action="/actor/add">
                    <div class="form-group">
                        <label for="name">
                            Actor Name
                        </label>
                        <input class="form-control" type="text" name="name" id="name" />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col">
                <h2>Acted in</h2>
                <form method="POST" action="/movie/actor/add">
                    <div class="form-group">
                        <label for="title">
                            Movie Title
                        </label>
                        <input class="form-control" type="text" name="title" id="title" />
                        <label for="name">
                            Actor Name
                        </label>
                        <input class="form-control" type="text" name="name" id="name" />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>

</html>